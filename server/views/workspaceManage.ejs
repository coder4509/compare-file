<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compare XML</title>
    <style>
        * {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            font-style: italic;
        }

        .head-main {
            padding: 1rem;
            border: 1px dotted #ccc;
            background-color: #ccc;
            margin-bottom: 15px;
        }

        .list-item .item {
            border: 1px solid #ccc;
            padding: 1rem;
            margin: 1rem;
        }

        input[type='text'],
        input[type='password'],
        #update-user {
            width: -webkit-fill-available !important;
            margin: 0.3rem;
        }

        dialog {
            border: 1px solid #ccc;
            width: 30rem;
            box-shadow: 0px 0px 16px 0px #ccc;
        }

        .main {
            border: 1px solid #ccc;
            padding: 3rem;
            width: fit-content;
            margin: 0 auto;
        }

        select,
        button,
        input {
            width: 25%;
            padding: 0.5rem;
            cursor: pointer;
            font-weight: bold;
        }

        .maxW {
            width: 25rem;
        }

        .head-main {
            padding: 1rem;
            border: 1px dotted #ccc;
            background-color: #ccc;
            margin-bottom: 15px;
        }

        #close-modal,
        #delete-works-close-modal {
            border: 1px solid #ccc;
            padding: 10px;
            cursor: pointer;
        }

        .modal-close-main {
            display: flex;
            justify-content: flex-end;
        }

        .login-p4 {
            align-self: center;
            font-size: 1.17em;
            font-weight: 600;
            padding: 10px;
            border: 1px solid white;
            cursor: pointer;
        }

        .manage-checklist {
            display: flex;
            padding: 2px;
            border: 1px solid #ccc;
        }

        .manage-checklist div {
            cursor: pointer;
            margin: 2px;
            border: 1px solid #ccc;
            padding: 10px;
        }

        .manage-checklist div:hover {
            background: #ccc;
        }

        .manage-checklist div.active {
            background: #ccc;
        }

        .checklist-button button {
            width: 5rem;
            margin: 2px;
            flex: 1;
            cursor: pointer;
        }

        .checklist-name {
            flex: 1;
        }

        .checklist-item {
            display: flex;
            padding: 10px;
            border: 1px solid #ccc;
            margin: 0.5rem;
            box-shadow: 0px 4px 10px 2px #ccc;
            cursor: pointer;
        }

        .view-details {
            border: 1px dashed #ccc;
            margin-left: 10px;
            padding: 3px;
        }
    </style>
</head>

<body>
    <div class="head-main" style="display: flex;
    justify-content: space-between;">
        <h3>Manage P4 Workspaces</h3>
        <div class="login-p4" onclick="loginPopup()">Login</div>
    </div>
    <!-- workspace info and actions -->
    <div>
        <div>
            <fieldset>
                <legend>
                    <h4>Workspace info</h4>
                </legend>
                <div>Workspace Name: <b><i id="workspace-name">******</i></b></div>
                <br />
                <div>Stream: <b><i id="workspace-stream">******</i></b></div>
                <br />
                <div>
                    <button onclick="deleteWorkspace()">Delete</button>
                </div>
            </fieldset>
        </div>
    </div>
    <br />
    <!-- checklist created in current workspace -->
    <div class="head-main">
        <h3>Manage Checklists</h3>
    </div>
    <div>
        <div class="manage-checklist">
            <div onclick="switchTab('pending')" id="pending" class="active">
                Pending
            </div>
            <div onclick="switchTab('submitted')" id="submitted">
                Submitted
            </div>
        </div>
        <div>
            <div>
                <div class="checklist-item">
                    <div class="checklist-name">CheckList Number <span class="view-details">View</span></div>
                    <div class="checklist-button">
                        <button>Revert</button>
                        <button>Delete</button>
                    </div>
                </div>
                <div class="checklist-item">
                    <div class="checklist-name">CheckList Number <span class="view-details">View</span></div>
                    <div class="checklist-button">
                        <button>Revert</button>
                        <button>Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- modals -->
    <!-- Login Modal -->
    <dialog id="login-modal">
        <form method="dialog">
            <div class="modal-close-main"><span id="close-modal">X</span></div>
            <div>
                <label id="username-re">*</label>
                <input type="text" id="username" onchange="onInputChange()" onblur="onInputChange()"
                    placeholder="Perforce username">
            </div>
            <div>
                <label id="password-re">*</label>
                <input type="password" id="password" onchange="onInputChange()" onblur="onInputChange()"
                    placeholder="********">
            </div>
            <div id="update-user">
                <input type="submit" id="confirmBtn" value="Login" disabled />
            </div>
        </form>
    </dialog>

    <!-- delete workspace -->
    <dialog id="delete-works-modal">
        <form method="dialog">
            <div class="modal-close-main"><span id="delete-works-close-modal">X</span></div>
            <h4>Are you sure want to delete this workspace?</h4>
            <div id="update-user">
                <button id="confirmBtn" value="Login">Delete</button>
            </div>
        </form>
    </dialog>

    <script>
        function onInputChange(e) {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            username ? document.getElementById("username-re").style.color = 'green' : document.getElementById("username-re").style.color = 'red';
            password ? document.getElementById("password-re").style.color = 'green' : document.getElementById("password-re").style.color = 'red';
            if (username && password) {
                document.getElementById('confirmBtn').removeAttribute('disabled');
            } else {
                document.getElementById('confirmBtn').setAttribute('disabled', true);
            }
        }
        function loginPopup() {
            const userDialog = document.getElementById('login-modal');
            const isopen = userDialog.show();
            const confirmBtn = document.getElementById('confirmBtn');
            const closeModal = document.getElementById('close-modal');
            setTimeout(() => {
                confirmBtn.addEventListener('click', () => {
                    //   loginP4();
                    userDialog.close();
                });
                closeModal.addEventListener('click', () => {
                    document.getElementById('username').value = '';
                    document.getElementById('password').value = '';
                    onInputChange();
                    userDialog.close();
                })
            }, 1000);
        }

        function deleteWorkspace() {
            const deleteDialog = document.getElementById('delete-works-modal');
            deleteDialog.showModal();
            const closeModal = document.getElementById('delete-works-close-modal');
            closeModal.addEventListener('click', () => {
                deleteDialog.close();
            })
        }

        function init() {
            const filters = window.location.search.split('?')[1];
            const filterBy = filters.split('=')[1];
            const elmPending = document.getElementById('pending');
            const elmSubmitted = document.getElementById('submitted');
            elmPending.removeAttribute('class');
            elmSubmitted.removeAttribute('class');
            document.getElementById(filterBy).setAttribute('class', 'active');
        }

        init();

        function switchTab(e) {
            const urlParams = new URLSearchParams(window.location.search);
            const elmPending = document.getElementById('pending');
            const elmSubmitted = document.getElementById('submitted');
            if (elmPending.className === 'active' && e !== 'pending') {
                elmPending.removeAttribute('class');
            }
            if (elmSubmitted.className === 'active' && e !== 'submitted') {
                elmSubmitted.removeAttribute('class');
            }

            urlParams.set('filter', e);
            window.location.search = urlParams;
            return document.getElementById(e).setAttribute('class', 'active');
        }
    </script>
</body>

</html>